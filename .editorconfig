# EditorConfig is awesome: https://EditorConfig.org

# Aturan paling atas berlaku untuk semua file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Pengaturan spesifik untuk file JavaScript dan JSX/TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = space

# Pengaturan untuk file CSS, SCSS, dan Less
[*.{css,scss,less}]
indent_size = 2
indent_style = space

# Pengaturan untuk file JSON dan Markdown
[*.{json,md}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

# Pengaturan untuk file HTML
[*.html]
indent_size = 2
indent_style = space

# Pengaturan untuk file YAML
[*.{yml,yaml}]
indent_size = 2
indent_style = space